<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="kr.hs.emirim.hhe6284.jeungyugyeng.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:text="정유경 시뮬레이터"/>

    <ImageView
        android:id="@+id/friend_visual"
        android:layout_gravity="center"
        android:src="@drawable/yu1"
        android:layout_width="200dp"
        android:layout_height="200dp" />
        <ImageView
            android:src="@"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장유걍으로 개명"
            android:onClick="onClick"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이쁜 짓 하는 정유경"
            android:onClick="onClick"
            android:layout_margin="3dp" />
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리눅스 정유경"
            android:onClick="onClick"
            android:layout_margin="3dp" />
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="웃긴 정유경" />
        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="통학생 홍하은"
            android:onClick="onClick"
            android:layout_margin="3dp" />


    </LinearLayout>